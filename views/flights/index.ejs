<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/index.css" />
<%- include('../partials/nav') %>

<main>
  <div class="container">
    <h1><%= title %></h1>
    <table>
      <thead>
        <tr>
          <th>Airline</th>
          <th>Flight Number</th>
        </tr>
      </thead>
      <tbody>
        <% flights.forEach(flight => { %>
          <tr>
            <td><%= flight.airline %></td>
            <td><%= flight.flightNo %></td>
            <td><a href="/flights/<%= flight._id %>" id="details">Additional Details</a></td>
            <td>
              <form action="/flights/<%= flight._id %>?_method=DELETE" method="POST">
                <button>Cancel Flight? <i class="fas fa-plane-arrival"></i></button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</main>

  <%- include("../partials/footer") %>